

<div class="login-signup">
        <section class="container-form-login-signup">
          <form class="form-login-signup" action="signup" method="post">
            <h2 class="login-signup-h2">Sign Up</h2>
            <label for="username"></label>
            <input class="input" type="text" name="username" id="username" placeholder="Username">
            <label for="email"></label>
            <input class="input" type="email" name="email" id="email" placeholder="Email">
            <label for="password"></label>
            <input class="input" type="password" name="password" id="password" placeholder="Password">
            <label for="confirm-password"></label>
            {{!-- <input class="input" type="confirm-password" name="confirm-password" id="confirm-password" placeholder="Confirm-Password"> --}}
            <a href="auth/login"><button class="btn" type="submit">Sign Up</button></a>

        </form>
        </section>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </div>

  </form>
</div>